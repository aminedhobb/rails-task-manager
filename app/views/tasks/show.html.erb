<div class= "header">
  <h1><%= @task.title %></h1>
  <%= link_to "Edit my task", edit_task_path(@task) %>
</div>
<div class="task-description">
  <p><%= @task.details %></p>
</div>
<ul class="list-inline">
  <li><% if @task.completed?%>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
  </li>
  <li><%= @task.title %></li>
</ul>
<%= link_to "Back to list", tasks_path %>
