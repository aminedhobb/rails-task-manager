<h1> My Tasks </h1>
<% @tasks.each do |task| %>
<ul class="list-inline">
  <li><% if task.completed?%>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
  </li>
  <li><%= link_to task.title, task_path(task) %></li>
  <li><%= link_to "Delete", task_path(task),
  method: :delete,
  data: { confirm: "Are you sure?"} %></li>
</ul>
<% end %>
<%= link_to "Add a new task", tasks_new_path %>
